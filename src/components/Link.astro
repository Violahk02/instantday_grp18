---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant= "textlink", size = "default" } = Astro.props; 
 
//Definer den styling (Tailwind classes, der gør sig gældende for alle links
const linkStyling = ""; 
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
"textlink": "underline text-ashy-black font-display hover:text-orange", 
"primary": "bg-orange px-16 py-4 font-display text-ashy-black rounded-xl cursor-pointer hover:bg-beige hover:border-4 border-orange", 
"secondary": "" 
};
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
"default": "text-default", 
"large": "lg:text-3xl text-xl",
"medium": "lg:text-xl text-sm",
"small": "text-large"
};
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<a href={href} target={target} class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}><slot /></a>